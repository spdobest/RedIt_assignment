<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/cardViewStyle"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_height="wrap_content"
                                    android:background="?attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"

                                    card_view:cardBackgroundColor="@android:color/white"
                                    card_view:cardElevation="2dp"
                                    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewProfileItem"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:orientation="vertical"
            >

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewMessageItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message Title"
                android:textSize="@dimen/dimen_16sp"
                tools:text="Message Title"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewDescItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message Descadasdasdasdad"
                android:textSize="@dimen/dimen_12sp"
                tools:text="Message Desc"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>