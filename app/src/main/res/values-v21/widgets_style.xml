<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--FOR NORMAL LAYOUT-->
    <style name="layout_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/window_bg</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="layout_match_withoutpadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/window_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <!--FOR NORMAL LAYOUT-->
    <style name="layout_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--FOR NORMAL LAYOUT-->
    <style name="layout_normal_withoutpadding">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimen_3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--BUTTON STYLE WITH RIPPLE-->
    <style name="Button_style_norml">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@drawable/button_primary_round</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="fontPath">fonts/halvetica.ttf</item>
    </style>


    <!--FOR TEXTVIEW-->
    <style name="textStyle_body" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.87</item>
        <item name="fontPath">fonts/halvetica.ttf</item>
    </style>

    <!--FOR NORMAL TEXTVIEW-->
    <style name="textStyle_normal" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dimen_3dp</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:alpha">0.87</item>
        <item name="fontPath">fonts/halvetica.ttf</item>
    </style>

    <!--FOR Button Colored-->
    <style name="buttonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/dimen_4dp</item>
        <item name="android:paddingRight">@dimen/dimen_4dp</item>
        <item name="android:alpha">0.87</item>
        <item name="fontPath">fonts/halvetica.ttf</item>
    </style>

    <!--FOR Button Colored-->
    <style name="buttonColoredStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity"> center</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/dimen_4dp</item>
        <item name="android:paddingRight">@dimen/dimen_4dp</item>
        <item name="android:alpha">0.87</item>
        <item name="fontPath">fonts/halvetica.ttf</item>
        <item name="background">@drawable/button_selector_default</item>
    </style>

    <!--FOR Button Colored-->
    <style name="buttonStyleBoarderless" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/dimen_4dp</item>
        <item name="android:paddingRight">@dimen/dimen_4dp</item>
        <item name="android:alpha">0.87</item>
        <item name="fontPath">fonts/halvetica.ttf</item>
    </style>

    <!--FOR Button Colored-->
    <style name="buttonStyleColorBoarderless" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/dimen_4dp</item>
        <item name="android:paddingRight">@dimen/dimen_4dp</item>
        <item name="android:alpha">0.87</item>
        <item name="fontPath">fonts/halvetica.ttf</item>
    </style>

    <!--CARD VIEW-->
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item><!--
        <item name ="card_view:cardElevation">@dimen/dimen_2dp</item>
        <item name ="card_view:cardUseCompatPadding">true</item>-->
    </style>

    <style name="styleEdittextMatch" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="colorControlNormal">@color/color_gray</item>
        <item name="colorControlActivated">@color/colorCompany</item>
        <item name="android:textColorPrimary">@color/color_gray</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="fontPath">fonts/halvetica.ttf</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:gravity">center_vertical|left|start</item>
    </style>

    <style name="styleEdittextWrap" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="colorControlNormal">@color/color_gray</item>
        <item name="colorControlActivated">@color/colorCompany</item>
        <item name="android:textColorPrimary">@color/color_gray</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="fontPath">fonts/halvetica.ttf</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
        <item name="android:gravity">center_vertical|left|start</item>
    </style>


    <!--NEW STYLE WITH MATERIAL DESIGN AND OTHER-->

    <style name="spButtonStyleGreen" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingRight">@dimen/dimen_4dp</item>
        <!--<item name="background">@drawable/btn_selector</item>-->
    </style>

    <!--EDITTEXT STYLE-->
    <style name="edittext_style_norml" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <!--<item name="android:layout_gravity">center_vertical</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--STYLE FOR TOOLBAR-->
    <style name="toolbarStyle" parent="Base.Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">@dimen/dimen_2dp</item>
        <item name="android:layout_gravity">top</item>
    </style>


    // cardview STyle
    <style name="cardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
